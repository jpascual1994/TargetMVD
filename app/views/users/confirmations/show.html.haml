.left-section
  .left-container
    .img-smilies
      = image_tag 'smilies.png'
    .text-container
      %p
        %strong
          = "Hi, #{resource.name}"
      %p
        = I18n.t(:welcome)
      %p
        %strong TARGET
    = form_for(User.new, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, class: 'principal-label'
        = f.email_field :email, autofocus: true, value: resource.email,  class: 'principal-field'
      .field
        = f.label :password, class: 'principal-label'
        = f.password_field :password, autocomplete: 'off', class: 'principal-field'
      .actions
        = f.submit 'Sign in', class: 'principal-button'
.right-section
  = render 'home/home_index_right'
