.edit-user-container
  .edit-user-top
    .back-button
      <
    .h4 Edit Profile
  .profile-img
  .user-name
    = user.name
  - unless user.provider == 'facebook'
    = form_for(user, url: user_registration_path, remote: true, html: { class: 'edit-user-form' }) do |f|
      %p
        = f.label :email, class: 'principal-label'
        = f.text_field :email, class: 'principal-field'
      %p
        = f.label :password, class: 'principal-label'
        = f.password_field :password, class: 'principal-field'
      %p
        = f.label :password_confirmation, class: 'principal-label'
        = f.password_field :password_confirmation, class: 'principal-field'
      %p
        = f.label :current_password, class: 'principal-label'
        = f.password_field :current_password, class: 'principal-field'
      %p.button
        = f.submit 'Save changes', class: 'edit-user-button principal-button'
  - else
    %h4.edit-fb-account
      = I18n.t(:facebook_account)
  = link_to 'Delete my TARGET account', registration_path(resource_name), data: { confirm: 'Are you sure?' },
    method: :delete, class: 'delete-account-link'
